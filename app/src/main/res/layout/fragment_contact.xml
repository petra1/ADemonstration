<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="?colorSecondary"
    tools:context=".contact.ContactFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:accessibilityHeading="true"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:text="@string/privacy"
                    android:textColor="?colorOnPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/privacy_text"
                    android:textColor="?colorOnPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/privacy_text2"
                    android:textColor="?colorOnPrimary"
                    android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:accessibilityHeading="true"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:text="@string/contact_information"
                    android:textColor="?colorOnPrimary"
                    android:textSize="24sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/contact_name"
                    android:textColor="?colorOnPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/petra_ritter"
                    android:textColor="?colorOnPrimary"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/email"
                    android:textColor="?colorOnPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:autoLink="email"
                    android:fontFamily="sans-serif-medium"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text="@string/mail_address"
                    android:textColorLink="?colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/website"
                    android:textColor="?colorOnPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_website_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:autoLink="web"
                    android:fontFamily="sans-serif-medium"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text="@string/website_url"
                    android:textColorLink="?colorPrimary"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/github"
                    android:textColor="?colorOnPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_GitHup_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:autoLink="web"
                    android:fontFamily="sans-serif-medium"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text="@string/github_url"
                    android:textColorLink="?colorPrimary"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>